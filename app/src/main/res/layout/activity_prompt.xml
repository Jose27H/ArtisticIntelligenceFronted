<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      android:padding="16dp">

    <!-- Mode Selector Spinner -->
    <Spinner
        android:id="@+id/mode_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:padding="12dp"
        android:background="@android:drawable/btn_dropdown" />

    <!-- Scrollable container for all layouts -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

      <LinearLayout
          android:id="@+id/input_container"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical">

        <!-- Sketch Mode -->
        <LinearLayout
            android:id="@+id/sketch_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

          <EditText
              android:id="@+id/sketch_prompt_input"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:hint="Enter description"
              android:padding="12dp"
              android:background="@android:drawable/editbox_background"
              android:layout_marginBottom="16dp"/>

          <ImageView
              android:id="@+id/sketch_image_preview"
              android:layout_width="match_parent"
              android:layout_height="200dp"
              android:scaleType="centerCrop"
              android:visibility="gone"
              android:layout_marginBottom="16dp"/>

          <Button
              android:id="@+id/sketch_upload_button"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Upload Reference Image"/>
        </LinearLayout>

        <!-- Style Mode -->
        <LinearLayout
            android:id="@+id/style_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

          <EditText
              android:id="@+id/style_prompt_input"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:hint="Enter style description"
              android:padding="12dp"
              android:background="@android:drawable/editbox_background"
              android:layout_marginBottom="16dp"/>

          <ImageView
              android:id="@+id/style_image_preview"
              android:layout_width="match_parent"
              android:layout_height="200dp"
              android:scaleType="centerCrop"
              android:visibility="gone"
              android:layout_marginBottom="16dp"/>

          <Button
              android:id="@+id/style_upload_button"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Upload Image to Style"/>
        </LinearLayout>

        <!-- Outpaint Mode -->
        <LinearLayout
            android:id="@+id/outpaint_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

          <EditText
              android:id="@+id/outpaint_prompt_input"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:hint="Enter outpainting description"
              android:padding="12dp"
              android:background="@android:drawable/editbox_background"
              android:layout_marginBottom="16dp"/>

          <ImageView
              android:id="@+id/outpaint_image_preview"
              android:layout_width="match_parent"
              android:layout_height="200dp"
              android:scaleType="centerCrop"
              android:visibility="gone"
              android:layout_marginBottom="16dp"/>

          <Button
              android:id="@+id/outpaint_upload_button"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Upload Image to Outpaint"/>
        </LinearLayout>

        <!-- Search & Replace Mode -->
        <LinearLayout
            android:id="@+id/search_replace_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

          <EditText
              android:id="@+id/search_text_input"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:hint="Enter what to search for"
              android:padding="12dp"
              android:background="@android:drawable/editbox_background"
              android:layout_marginBottom="16dp"/>

          <EditText
              android:id="@+id/replace_text_input"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:hint="Enter what to replace with"
              android:padding="12dp"
              android:background="@android:drawable/editbox_background"
              android:layout_marginBottom="16dp"/>

          <ImageView
              android:id="@+id/search_replace_image_preview"
              android:layout_width="match_parent"
              android:layout_height="200dp"
              android:scaleType="centerCrop"
              android:visibility="gone"
              android:layout_marginBottom="16dp"/>

          <Button
              android:id="@+id/search_replace_upload_button"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Upload Image"/>
        </LinearLayout>

        <!-- Remove Background Mode -->
        <LinearLayout
            android:id="@+id/remove_bg_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

          <ImageView
              android:id="@+id/remove_bg_image_preview"
              android:layout_width="match_parent"
              android:layout_height="200dp"
              android:scaleType="centerCrop"
              android:visibility="gone"
              android:layout_marginBottom="16dp"/>

          <Button
              android:id="@+id/remove_bg_upload_button"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Upload Image"/>
        </LinearLayout>

        <!-- Replace Background & Relight Mode -->
        <LinearLayout
            android:id="@+id/replace_bg_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

          <EditText
              android:id="@+id/replace_bg_prompt_input"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:hint="Enter new background description"
              android:padding="12dp"
              android:background="@android:drawable/editbox_background"
              android:layout_marginBottom="16dp"/>

          <ImageView
              android:id="@+id/replace_bg_image_preview"
              android:layout_width="match_parent"
              android:layout_height="200dp"
              android:scaleType="centerCrop"
              android:visibility="gone"
              android:layout_marginBottom="16dp"/>

          <Button
              android:id="@+id/replace_bg_upload_button"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Upload Image"/>
        </LinearLayout>

      </LinearLayout>
    </ScrollView>

    <!-- Submit Button -->
    <Button
        android:id="@+id/submit_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Generate"
        android:padding="12dp"/>

  </LinearLayout>

  <!-- Loading Overlay (positioned over everything) -->
  <FrameLayout
      android:id="@+id/loading_overlay"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="#80000000"
      android:visibility="gone"
      android:clickable="true"
      android:focusable="true">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp"
        android:background="@android:color/white">

      <ProgressBar
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginBottom="8dp"/>

      <TextView
          android:id="@+id/loading_text"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Generating..."
          android:textSize="16sp"/>

    </LinearLayout>

  </FrameLayout>

</RelativeLayout>